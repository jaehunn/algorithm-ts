{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run .ts",
      "type": "node",
      "request": "launch",

      "program": "${file}",

      "runtimeExecutable": "node",
      "runtimeArgs": ["--loader", "ts-node/esm"],
      "args": ["${file}"],

      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
    }
  ]
}
